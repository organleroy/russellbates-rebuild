{% set featured = collections.featuredHome %}

<div class="grid">
  {# Use featuredHome if present, else fall back to all projects #}
  {% if featured and featured | length > 0 %}
    {% set list = featured %}
  {% else %}
    {% set list = collections.projects %}
  {% endif %}

  {% for project in list %}
    <a class="card" href="{{ project.url }}">
      <div class="card-media">
        <img src="{{ project.data.thumbnail }}" alt="{{ project.data.title }}">
        <div class="card-overlay"></div>
      </div>
      <div class="card-title">
        {{ project.data.title }}
      </div>
    </a>
  {% endfor %}
</div>